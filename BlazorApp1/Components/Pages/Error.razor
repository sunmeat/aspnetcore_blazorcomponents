@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

@if (ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@RequestId</code>
    </p>
}

<h3>Development Mode</h3>
<p>
    Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
</p>
<p>
    <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
    It can result in displaying sensitive information from exceptions to end users.
    For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong>
    and restarting the app.
</p>

@code{
    [CascadingParameter] // дозволяє передати httpcontext з батьківського компонента вниз по дереву без явної передачі
    private HttpContext? HttpContext { get; set; } // посилання на контекст поточного http-запиту

    private string? RequestId { get; set; } // ідентифікатор запиту, це "глобальний" trace-id, який може проходити через багато сервісів

    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);
    // властивість, яка каже, чи варто взагалі показувати ідентифікатор (true, якщо рядок не порожній)

    protected override void OnInitialized() => // метод, який викликається після створення компонента
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier; // TraceIdentifier - це завжди "локальний" ідентифікатор одного запиту на одному сервері (генерується IIS/Kestrel)
    // спочатку беремо id з поточної activity,
    // якщо його немає — береться TraceIdentifier з Http-контексту
}
